@using Blazorise
@using Radzen.Blazor
@inject NavigationManager NavigationManager


<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ArrendaVisit</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" style="color: white;">
                @* <img src="cita.png" alt="Solicitar Cita" style="width: 20px; height: 20px; margin-right: 8px;" /> ArrendaVisit *@
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> ArrendaVisit
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Solicitar" Match="NavLinkMatch.All" style="color: white;">
                <img src="cita.png" alt="Solicitar Cita" style="width: 20px; height: 20px; margin-right: 8px;" /> Solicitar Cita
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ConsultaCliente" Match="NavLinkMatch.All" style="color: white;">
                <img src="Consultar.png" alt="Consultar Cita" style="width: 20px; height: 20px; margin-right: 8px;" /> Consultar Citas
                @* <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Consultar Cita *@
                @* <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Solicitar Cita *@
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Cancelar" Match="NavLinkMatch.All">
                <img src="CancelarCita.png" alt="Cancelar Cita" style="width: 20px; height: 20px; margin-right: 8px;" /> Cancelar Cita
                @* <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Cancelar Cita *@
            </NavLink>
        </div>
    </nav>
</div>


<Modal @ref="modalRef">
    <ModalContent Size="ModalSize.Large" Centered="true">
        <ModalHeader>
            <ModalTitle>
                Bienvenido al Sistema de Agendamiento Virtual
            </ModalTitle>
        </ModalHeader>
        <ModalBody>
            <br />
            <p>
                <font size="3" face="arial, sans-serif" color="black">Los trámites que usted puede agendar para atención en el punto presencial son:</font>
            </p>

            <p>
                <font size="2" face="arial, sans-serif" color="black">1.Reclamos por facturación del servicio.</font>
                <br />
                <font size="2" face="arial, sans-serif" color="black">2.Solicitud de paz y salvos.</font>
                <br />
                <font size="2" face="arial, sans-serif" color="black">3.Orientación a la factura.</font>
                <br />
                <font size="2" face="arial, sans-serif" color="black">4.Expedición de certificados de prestación del servicio.</font>
                <br />
                <font size="2" face="arial, sans-serif" color="black">5.Quejas por prestación del servicio.</font>
            </p>

        </ModalBody>
        <ModalFooter>
            <Button Color="Color.Primary" Clicked="@Cerrar">Aceptar</Button>
        </ModalFooter>
    </ModalContent>
</Modal>

@code {

    private Modal? modalRef = null!;

    private void NavigateSolicitar()
    {
        modalRef.Show();
    }

    private void Cerrar()
    {
        NavigationManager.NavigateTo("Solicitar");
    }

}
